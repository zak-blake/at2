<%= image_tag( @user.avatar.url(:medium), { class: "style_image_full", id:"user_show_prof_pic", align:"left" } ) %>

<h1><%= @user.full_name %></h1>
<br>
<p><%= @user.bio %></p>
<br>
<h3 id="album_head" align="left"> Albums </h3>
<br>
<% album_exists = false %>
<div id="album_block">
  <% Album.find_each do |a| %>
    <% if a.user_id == @user.id %>


      <div class="img_block">

        <% album_exists = true %>
        <%= link_to album_path(a.id) do %>
          <%= image_tag( a.image.url(:large), { class: "style_image_full", id: "user_show_album_image" } ) %>
        <% end %>
        <h2><%= a.title %></h2>
        <p><%= a.description %></p>
      </div>

    <% end %>
  <% end %>
</div>
<% if album_exists == false %>
  <h2> No Albums have been posted </h2>
<% end %>
