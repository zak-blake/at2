<div class="container">
  <h1><%= @user.full_name %></h1>
  <br>
  <p><%= @user.bio %></p>
  <br>
</div>
<% Piece.find_each do |a| %>
  <% if a.user_id == @user.id %>
  <div class="container">
    <div class="img_block">
        <%= link_to (image_tag a.image.url(:large), :class => "style_image"), piece_path(a.id) %>
    </div>
    <div class="info_block">
      <h2><%= a.title %></h2>
    </div>
  </div>
  <% end %>
<% end %>
