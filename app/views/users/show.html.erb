<!DOCTYPE html>
<html lang="en">

<head
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>


    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> <%= @user.full_name %>
                    <small>Albums</small>
                </h1>
            </div>
        </div>

        <% Album.where(user_id: @user.id).find_each do |a| %>
          <div class="row">
              <div class="col-md-7">
                <%= link_to album_path(a.id) do %>
                  <%= image_tag( a.image.url(:show_album), { class: "img-responsive" } ) %>
                <% end %>
              </div>
              <div class="col-md-5">
                  <h3> <%= a.title %> </h3>
                  <p><%= a.description %></p>
              </div>

          </div>
        <% end %>

        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Artisans Treasures 2016</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>


</body>

</html>
