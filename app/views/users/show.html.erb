<%= content_for :breadcrumbs do %>
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to @user.full_name, user_path(@user.id) %></li>
<% end %>

<body>
  <div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> <%= @user.full_name %>
                <small>Albums</small>
            </h1>
        </div>
    </div>

    <div class="media">
      <span class="media-left">
          <%= image_tag( @user.avatar.url(:medium) ) %>
      </span>
      <div class="media-body">
          <p class="media-heading"><%= @user.bio %></p>
      </div>
    </div>

    <hr>

    <% count = 0 %>
    <% Album.where(user_id: @user.id).order("priority DESC").each do |a| %>
      <% count += 1 %>
      <div class="row">
          <div class="col-md-7">
            <%= link_to album_path(a.id) do %>
              <%= image_tag( a.image.url(:show_album), { class: "img-responsive" } ) %>
            <% end %>
          </div>
          <div class="col-md-5">
              <h3> <%= a.title %> </h3>
              <p><%= a.description %></p>
          </div>

      </div>
    <% end %>

    <% if count <= 0 %>
      <center><h3>No Albums Posted Yet</h3></center>
    <% end %>

    <hr>
    <div class="text-center">
      <div class="btn-group" role="group" aria-label="...">
        <% if user_signed_in? && current_user.id == @user.id %>
          <%= link_to 'Add Album', new_album_path, class: "btn btn-default" %>
        <% else %>
          <%= link_to 'Contact This Artist', root_path, class: "btn btn-default" %>
        <% end %>
      </div>
    </div>

  </div>

</body>

</html>
