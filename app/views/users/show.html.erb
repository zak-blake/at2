<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>


    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> <%= @user.full_name %>
                    <small>Albums</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <% Album.where(user_id: @user.id).in_groups_of(4, false) do |group| %>
          <div class="row">

            <% group.each do |a| %>
              <div class="col-md-3 portfolio-item">
                <%= link_to album_path(a.id) do %>
                  <%= image_tag( a.image.url(:show_album), { class: "img-responsive" } ) %>
                <% end %>
              </div>
            <% end %>

          </div>
        <% end %>

        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Artisans Treasures 2016</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>


</body>

</html>
